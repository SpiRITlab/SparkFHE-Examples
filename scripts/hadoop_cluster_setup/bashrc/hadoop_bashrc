export YARN_CONF_DIR=${HADOOP_HOME}/etc/hadoop
export PATH=$HADOOP_HOME/bin:$HADOOP_COMMON_HOME/bin:$HADOOP_HDFS_HOME/bin:$HADOOP_MAPRED_HOME/bin:$HADOOP_YARN_HOME/bin:$HADOOP_HOME/sbin:$HADOOP_COMMON_HOME/sbin:$HADOOP_HDFS_HOME/sbin:$HADOOP_MAPRED_HOME/sbin:$HADOOP_YARN_HOME/sbin:$PATH
export CLASSPATH=.:$HADOOP_HOME/lib:$HADOOP_COMMON_HOME/lib:$HADOOP_HDFS_HOME/lib:$HADOOP_MAPRED_HOME/lib:$HADOOP_YARN_HOME/lib:$CLASSPATH

